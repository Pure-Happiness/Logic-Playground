<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Logic_Playground.BreadcrumbItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<StackPanel Orientation="Horizontal">
		<Button
			x:Name="name"
			Background="Transparent"
			BorderThickness="0"
            Loaded="LoadedEvent"
			Click="NameClick"
			PointerPressed="NameMiddleClick"
			RightTapped="NameRightClick"/>
		<Button
			Background="Transparent"
			BorderThickness="0"
			Click="MenuClick">
			<FontIcon x:Name="icon" Glyph="&#xE76C;" FontSize="19"/>
			<Button.Flyout>
				<MenuFlyout x:Name="menu" Closed="MenuClosed"/>
			</Button.Flyout>
		</Button>
	</StackPanel>
</UserControl>
