<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Logic_Playground.TipTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <TextBlock>
        <Run Text="Template ID param image arg" FontFamily="{StaticResource CascadiaCode}"/>
        <Run Text=" produces theorem"/>
        <LineBreak/>
        <Run Text="(param@image)#arg=result" FontFamily="{StaticResource CascadiaCode}"/>
        <Run Text=" named "/>
        <Run Text="ID" FontFamily="{StaticResource CascadiaCode}"/>
        <Run Text="."/>
        <LineBreak/>
        <Run x:Uid="MoreInformation"/>
    </TextBlock>
</UserControl>
