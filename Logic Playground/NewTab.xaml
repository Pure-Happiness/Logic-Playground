<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Logic_Playground.NewTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="{ThemeResource TabViewItemHeaderBackgroundSelected}" x:Name="top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock
			    Margin="24,0,0,0"
			    VerticalAlignment="Center"
			    x:Uid="recentBlock"
			    FontSize="18"
			    FontWeight="Bold"/>
            <AppBarButton
			    Grid.Column="1"
			    Icon="Add"
			    x:Uid="addButton"
			    Click="NewFileClick"/>
            <AppBarButton
			    Grid.Column="2"
			    Icon="OpenFile"
			    x:Uid="openButton"
			    Click="OpenFileClick"/>
            <AppBarButton
			    Grid.Column="3"
			    Icon="Setting"
			    x:Uid="setButton"
			    Click="SettingsClick"/>
        </Grid>
        <ScrollView Grid.Row="1" HorizontalScrollMode="Disabled">
            <StackPanel x:Name="recentFiles" Padding="36" Spacing="16" Loaded="LoadedEvent"/>
        </ScrollView>
    </Grid>
</Page>
