<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Logic_Playground.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border
            Background="{ThemeResource TabViewItemHeaderBackgroundSelected}"
            Padding="24,20,0,20">
            <TextBlock x:Uid="settingsTitle" FontSize="18" FontWeight="Bold"/>
        </Border>
        <ScrollView Grid.Row="1" HorizontalScrollMode="Disabled">
            <StackPanel Padding="36" Spacing="16">
                <Grid
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Margin="16"
                        VerticalAlignment="Center"
                        Glyph="&#xE790;"/>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        x:Uid="themeBlock"/>
                    <ComboBox
                        Grid.Column="2"
                        x:Name="themeChoice"
                        Margin="16"
                        VerticalAlignment="Center"
                        Loaded="ThemeChoiceLoaded"
                        SelectionChanged="ThemeSelectionChanged">
                        <ComboBoxItem x:Uid="Light"/>
                        <ComboBoxItem x:Uid="Dark"/>
                        <ComboBoxItem x:Uid="System"/>
                    </ComboBox>
                </Grid>
                <Grid
		            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
		            CornerRadius="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <FontIcon
                        Margin="16"
                        VerticalAlignment="Center"
                        Glyph="&#xF2B7;"/>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        x:Uid="languageBlock"/>
                    <ComboBox
                        Grid.Column="2"
                        x:Name="languageChoice"
                        Margin="16"
                        VerticalAlignment="Center"
                        Loaded="LanguageChoiceLoaded"
                        SelectionChanged="LanguageSelectionChanged">
                        <x:String>简体中文</x:String>
                        <x:String>English</x:String>
                    </ComboBox>
                </Grid>
                <Expander
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    HorizontalAlignment="Stretch"
                    x:Uid="Recovery">
                    <StackPanel
                        x:Name="toRecover"
                        Spacing="12"
                        Loaded="RecoveryLoaded"/>
                </Expander>
                <Grid
	                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
	                CornerRadius="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <BitmapIcon
                        Margin="16"
                        VerticalAlignment="Center"
                        ShowAsMonochrome="False"
                        UriSource="ms-appx:///Assets/StoreLogo.scale-100.png"/>
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="Logic Playground&#x000A;逻辑游乐场"/>
                    <TextBlock
                        Grid.Column="2"
                        Margin="16"
                        VerticalAlignment="Center"
                        Text="0.3.0"/>
                </Grid>
            </StackPanel>
        </ScrollView>
    </Grid>
</Page>
