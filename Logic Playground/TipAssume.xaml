<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Logic_Playground.TipAssume"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <TextBlock>
        <Run Text="Assume NAME ID p" FontFamily="{StaticResource CascadiaCode}"/>
        <Run Text=" produces a scope "/>
        <Run Text="NAME" FontFamily="{StaticResource CascadiaCode}"/>
        <Run Text=","/>
        <LineBreak/>
        <Run Text="which includes an assumed theorem "/>
        <Run Text="p" FontFamily="{StaticResource CascadiaCode}"/>
        <Run Text=" named "/>
        <Run Text="ID" FontFamily="{StaticResource CascadiaCode}"/>
        <Run Text="."/>
    </TextBlock>
</UserControl>
